<html>
    <head>
        <title>
            <%= locals.title%>
        </title>
        
        <link rel="stylesheet" href="../node_modules/font-awesome/css/font-awesome.min.css" >
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <div id="myDIV" class="header">
            <h2>My To Do List</h2>
            <form action="/create-contact" method="POST">
                <input type="text" name="name" placeholder="Enter Task to be Added..." required>
                <button type="submit" class="addBtn">Add Task</button>
            </form>
        </div>
        
        <div class="form-group">
            <ol>
                   
                <% for (let i of contact_list) { %> 
                   <div class="contact"> 
                        <li>
                            <p><%= i.name %></p>
                    
                        </li>
                    </div>
                    <div class="delete-button">
                        <a href="/delete-contact/?id=<%= i.id %>">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                <% } %>
            </ol>
        </div>

        <script src="https://kit.fontawesome.com/43fb5c7cd1.js" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>